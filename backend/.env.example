DJANGO_SECRET_KEY=replace-with-a-strong-secret
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=api.yourdomain.com

# HTTPS/security flags (set True only behind real HTTPS in production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Local default: SQLite
USE_SQLITE=True

# For Neon/Postgres set USE_SQLITE=False and provide DATABASE_URL.
# Example:
# DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=

# Optional explicit Postgres fields (used when USE_SQLITE=False and DATABASE_URL is empty)
EVENT_DB_NAME=event_db
EVENT_DB_USER=event_db_user
EVENT_DB_PASSWORD=event_db_password
EVENT_DB_HOST=localhost
EVENT_DB_PORT=5432

# Frontend origins allowed by CORS (comma-separated)
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# Email disabled by default; booking emails are off unless enabled.
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com
SEND_BOOKING_EMAILS=False

# Kept for compatibility, activation emails are disabled.
EMAIL_FRONTEND_DOMAIN=app.yourdomain.com
